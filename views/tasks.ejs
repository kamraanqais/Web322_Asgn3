<%- include('partials/header') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Your Tasks</h2>
    <a href="/tasks/add" class="btn btn-primary">Add New Task</a>
  </div>

  <% if (tasks && tasks.length > 0) { %>
    <div class="row">
      <% tasks.forEach(task => { %>
        <div class="col-12 mb-4">
          <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h5 class="card-title mb-1"><%= task.title %></h5>
                  <% if (task.description) { %>
                    <p class="card-text text-muted"><%= task.description %></p>
                  <% } %>
                  <% if (task.dueDate) { %>
                    <small class="text-muted">
                      Due: <%= new Date(task.dueDate).toLocaleDateString('en-CA') %>
                    </small>
                  <% } %>
                </div>
                <span class="badge rounded-pill <%= task.status === 'completed' ? 'bg-success' : 'bg-warning text-dark' %> px-3 py-2">
                  <%= task.status %>
                </span>
              </div>

              <div class="mt-3">
                <a href="/tasks/edit/<%= task.id %>" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                <form action="/tasks/delete/<%= task.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger me-2" onclick="return confirm('Delete this task?')">Delete</button>
                </form>
                <form action="/tasks/status/<%= task.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-info text-white">
                    <%= task.status === 'completed' ? 'Mark as Pending' : 'Mark as Completed' %>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <div class="bg-white rounded-4 shadow-sm p-5 d-inline-block">
        <p class="display-6 text-muted">No tasks yet</p>
        <a href="/tasks/add" class="btn btn-primary btn-lg mt-3">Create Your First Task</a>
      </div>
    </div>
  <% } %>

  <div class="text-center mt-5">
    <a href="/dashboard" class="btn btn-secondary me-3">Back to Dashboard</a>
    <a href="/logout" class="btn btn-outline-danger">Logout</a>
  </div>
</div>

<%- include('partials/footer') %>