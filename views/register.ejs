<%- include('partials/header', {title: 'Register'}) %>

<div style="max-width:400px; margin:0 auto; background:white; padding:40px; border-radius:16px; box-shadow:0 10px 30px rgba(0,0,0,0.1);">
  <% if (error) { %>
    <div style="background:#fee2e2; color:#dc2626; padding:12px; border-radius:8px; margin-bottom:20px;"><%= error %></div>
  <% } %>

  <form method="POST" action="/register">
    <div style="margin-bottom:20px;">
      <input type="text" name="username" placeholder="Username" required style="width:100%; padding:14px; border:2px solid #e5e7eb; border-radius:8px; font-size:1rem;">
    </div>
    <div style="margin-bottom:20px;">
      <input type="email" name="email" placeholder="Email" required style="width:100%; padding:14px; border:2px solid #e5e7eb; border-radius:8px; font-size:1rem;">
    </div>
    <div style="margin-bottom:20px;">
      <input type="password" name="password" placeholder="Password" required style="width:100%; padding:14px; border:2px solid #e5e7eb; border-radius:8px; font-size:1rem;">
    </div>
    <button type="submit" style="width:100%; background:#3b82f6; color:white; padding:14px; border:none; border-radius:8px; font-size:1rem; font-weight:600; cursor:pointer;">Register</button>
  </form>
  <p style="text-align:center; margin-top:20px;">Already have an account? <a href="/login" style="color:#3b82f6;">Login</a></p>
</div>